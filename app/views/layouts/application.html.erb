<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title( yield :title ) %></title>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body>
    <div class="container-fluid">

      <div class="row-fluid">
        <span class="span12">
          <%= render 'layouts/header' %>
        </span>
      </div>

      <div class="row-fluid">
        <div class="span12">
          <% flash.each do |key, value| %>
            <div class="row">
              <div class="span6">
                <div class="alert alert-<%= key %>">
                  <%= content_tag :h4, value, class: "alert-heading" %>
                </div>
              </div>
            </div>
          <% end %>
          <%= yield %>
        </div>
      </div>

      <div class="row-fluid">
        <span class="span12">
          <%= render 'layouts/footer'%>
          <%= debug(params) if Rails.env.development? %>
        </span>
      </div>
    </div>
  </body>
</html>
