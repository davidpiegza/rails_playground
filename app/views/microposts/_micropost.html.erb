<div class="micropost-item">
  <div class="micropost">
    <div class="content"><%= micropost.content %></div>
    <div class="timestamp">
      Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    </div>
  </div>
  <% if current_user?(micropost.user) %>
    <div class="admin-actions pull-right">
      <%= link_to "delete", micropost, method: :delete, confirm: "Are you sure?", title: micropost.content, class: 'btn btn-mini btn-danger' %>
    </div>
  <% end %>
</div>
