<% provide :title, 'Home' %>

<% if signed_in? %>

  <div class="page-header">
    <h1>What's up?</h1>
    <%= render 'shared/micropost_form' %>
  </div>
  
  <div class="row-fluid">
    <div class="profile span6">
      <%= render 'shared/feed' %>
    </div>

    <div class="span6">
      <div class="sidebar">
        <%= render 'shared/user_info' %>
        <%= render 'shared/stats' %>
      </div>
    </div>
  </div>

<% else %>

  <div class="hero-unit">
    <h1>Sample App</h1>
    <p style="margin: 20px 0;">
      This is the home page for the
      <a href="http://railstutorial.org/">Ruby on Rails Tutorial</a>
      sample application.
    </p>
    <p><%= link_to "Sign up now!", signup_path, :class => "btn btn-primary btn-large" %> </p>
  </div>

<% end %>
