<div id="<%= feed_item.id %>" class="feed-item">
  <div class="gravatar">
    <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  </div>
  <div class="micropost">
    <div class="user">
      <%= link_to feed_item.user.name, feed_item.user %>
    </div>
    <div class="content">
      <%= feed_item.content %>
    </div>
    <div class="timestamp">
      Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
    </div>
  </div>

  <% if current_user?(feed_item.user) %>
      <div class="admin-actions">
        <%= link_to "delete", feed_item, method: :delete, confirm: "Are you sure?", title: feed_item.content, class: 'button btn-mini btn-danger' %>
      </div>
  <% end %>
</div>
